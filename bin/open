#!/usr/bin/env bash

file="$@"
mime_type=`file "$file" --dereference --mime-type | sed -n 's/^.*: \(.*\)$/\1/p'`


case $mime_type in
  image/*)
    open-image "$file"
    ;;

  video/*)
    mpv "$file"
    ;;

  inode/directory)
    (
      set -e
      cd $file
      open "$(fzf)"
    )
    ;;

  application/pdf)
    zathura "$file"
    ;;

  *)

    echo $mime_type

    bat "$file"

    ;;

esac



