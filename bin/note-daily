#!/usr/bin/env bash

set -e

NOTE="$HOME/notes/01 Daily/$(date +%Y/%m\ %b/%Y-%m-%d.md)"
TITLE=$(date +'%A, %d %B')
FOLDER="$(dirname "$NOTE")"

mkdir -p "${FOLDER}"

cd "$HOME/notes"

if [ ! -f "$NOTE" ]; then
	cat >> "$NOTE" << EOF
---
created: "$(date -Iseconds)"
---

# ${TITLE}
EOF
fi

echo "" >> "$NOTE"
echo "$(date "+%H:%M") - " >> "$NOTE"

nvim "$NOTE" -c '$ | startinsert!'
