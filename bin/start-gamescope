#!/usr/bin/env bash

while true; do
	if [[ "$(killall -u $USER steam 2>&1)" == 'steam: no process found' ]]; then
		break
	fi

	sleep 0.2
done

WIDTH=3840
HEIGHT=2160

OUTPUT_WIDTH=3840
OUTPUT_HEIGHT=2160

STEAM_COMMAND="steam -dev steam://open/bigpicture"

if [ "$1" = "--remote-play" ]; then
	sunshine &
	sleep 5

	WIDTH=2560
	HEIGHT=1440
	OUTPUT_WIDTH=2560
	OUTPUT_HEIGHT=1440
elif [ "$1" = "--lowres" ]; then
	WIDTH=1920
	HEIGHT=1080
fi

echo "running: gamescope -w $WIDTH -h $HEIGHT -W $OUTPUT_WIDTH -H $OUTPUT_HEIGHT"

if [[ "$(tty)" = "/dev/tty"* ]]; then
	gamescope --backend drm \
		-w $WIDTH -h $HEIGHT -W $OUTPUT_WIDTH -H $OUTPUT_HEIGHT \
		-r 60 -O DP-1 --rt --xwayland-count 2 \
		-F fsr -e -- $STEAM_COMMAND
else
	gamescope --mangoapp --rt -w $WIDTH -h $HEIGHT -r 60 -f -- $STEAM_COMMAND
fi
