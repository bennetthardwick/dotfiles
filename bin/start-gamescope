#!/usr/bin/env bash

while true
do
  if [[ "$(killall -u $USER steam 2>&1)" == 'steam: no process found' ]]; then
    break
  fi

  sleep 0.2
done

WIDTH=3840
HEIGHT=2160

OUTPUT_WIDTH=3840
OUTPUT_HEIGHT=2160

  if [ "$1" = "--remote-play" ]; then
		WIDTH=1920
		HEIGHT=1080
		OUTPUT_WIDTH=1920
		OUTPUT_HEIGHT=1080
	elif [ "$1" = "--lowres" ]; then
		WIDTH=1920
		HEIGHT=1080
  fi

echo "running: gamescope -w $WIDTH -h $HEIGHT -W $OUTPUT_WIDTH -H $OUTPUT_HEIGHT"

if [[ "$(tty)" = "/dev/tty"* ]]; then
	gamescope -w $WIDTH -h $HEIGHT -W $OUTPUT_WIDTH -H $OUTPUT_HEIGHT -r 60 -F fsr -O DP-1 -e -- gamemoderun steam -gamepadui
else
	gamescope -w $WIDTH -h $HEIGHT -r 60 -f -- gamemoderun steam -gamepadui
fi
