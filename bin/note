#!/bin/bash

NOTE=$HOME/notes/$(date +%F).md

SEARCH=""
TYPE=""

while (( "$#" )); do
  case "$1" in
    -s|--search)
      SEARCH=$2
      shift 2
      ;;
    -t|--type)
      TYPE=$2
      shift 2
      ;;
    --) # end argument parsing
      shift
      break
      ;;
    -*|--*=) # unsupported flags
      echo "Error: Unsupported flag $1" >&2
      exit 1
      ;;
  esac
done

open_files () {
  local FILES=$1
  if [ -z "$FILES" ]
  then
    echo "No files found :)"
  else
    nvim -q <(echo -e "$FILES") +copen
  fi
  exit 0
}

if [ ! -z "$TYPE" ]
then
  FILES=$(rg -i "^-?\s?$TYPE:" $HOME/notes --vimgrep)
  open_files $FILES
fi

if [ ! -z "$SEARCH" ]
then
  FILES=$(rg -i "$SEARCH" $HOME/notes --vimgrep)
  open_files $FILES
fi

if [ ! -f $NOTE ]
then
  echo "# $(date '+%A, %B %e')" > $NOTE
fi

echo "" >> $NOTE
echo "## $(date '+%R')" >> $NOTE

nvim $NOTE '+norm!Go'
