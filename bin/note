#!/bin/bash

DATE=$(date +%F)
NOTE=$HOME/notes/daily/$DATE.md

SEARCH=""
TYPE=""

while (( "$#" )); do
  case "$1" in
    -s|--search)
      SEARCH=$2
      shift 2
      ;;
    -t|--type)
      TYPE=$2
      shift 2
      ;;
    -h|--help)
      echo "usage: note"
      echo "       note [--help]"
      echo "       note [--search | -s <term>]"
      echo "       note [--type | -t <type>]"
      echo ""
      echo "Create a new note, opening it in nvim:"
      echo "       note"
      echo ""
      echo "Search all notes for a specific term, e.g. cats"
      echo "       note --search cats"
      echo ""
      echo "Show everything that is marked as a todo"
      echo "       note --type todo"
      echo ""
      exit 0
      ;;
    --) # end argument parsing
      shift
      break
      ;;
    -*|--*=) # unsupported flags
      echo "Error: Unsupported flag $1" >&2
      exit 1
      ;;
  esac
done

open_files () {
  local FILES=$1
  if [ -z "$FILES" ]
  then
    echo "No files found :)" >&2
    exit 1
  else
    nvim -q <(echo -e "$FILES") +copen
  fi
  exit 0
}

if [ ! -z "$TYPE" ]
then
  FILES=$(rg -i "^\s*-?\s?$TYPE:" $HOME/notes --vimgrep | tac)
  open_files "$FILES"
fi

if [ ! -z "$SEARCH" ]
then
  FILES=$(rg -i "$SEARCH" $HOME/notes --vimgrep)
  open_files "$FILES"
fi

if [ ! -f $NOTE ]
then
  echo "---" > $NOTE
  echo "date: $DATE" >> $NOTE
  echo "---" >> $NOTE
  echo "# $(date '+%A, %B %e')" >> $NOTE
fi

nvim $NOTE '+norm!Go## '$(date '+%R')
